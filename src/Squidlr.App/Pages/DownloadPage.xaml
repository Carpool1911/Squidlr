<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:Squidlr.App.Pages"
             x:Class="Squidlr.App.Pages.DownloadPage"
             x:DataType="pages:DownloadPageViewModel"
             Title="{Binding Title}">

    <VerticalStackLayout>
        <VerticalStackLayout IsVisible="{Binding IsBusy}">
            <ActivityIndicator IsRunning="{Binding IsBusy}" />
            <Label Text="Your requested content is processed. Please wait a moment..." />
        </VerticalStackLayout>
        <Label 
            Text="{Binding ContentIdentifier.Url}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>

</ContentPage>